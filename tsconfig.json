{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
